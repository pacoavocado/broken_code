<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<div>
  {{!-- <a href='/signup'>/Create New Admin</a> --}}
  <a href='/tourinput'>/Create New Show</a>
  <a href='/albuminput'>/Create New Album</a>
</div>

<div class='row'>
  <div class='col-md-6 signup-card'>
    <h2>Create New Admin</h2>

    <form class='form signup-form'>
      <div class='form-group'>
        <label for='name-signup'>name:</label>
        <input class='form-input' type='text' id='name-signup' />
      </div>
      <div class='form-group'>
        <label for='email-signup'>email:</label>
        <input class='form-input' type='text' id='email-signup' />
      </div>
      <div class='form-group'>
        <label for='password-signup'>password:</label>
        <input class='form-input' type='password' id='password-signup' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>signup</button>
      </div>
      {{!-- <a href='/login'>/Back to the Login</a> --}}
    </form>

    {{#if users.length}}
      <div class='col-md-6'>
        <h3>Delete a User:</h3>

        {{#each users as |user|}}
          <div class='row mb-2'>
            <div class='col-md-8'>
              <h4>{{user.name}}</h4>
            </div>
            <div class='col-md-4'>
              <button
                class='btn btn-sm btn-danger user-list'
                data-id='{{user.id}}'
              >DELETE</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>

<script src='./js/signup.js'></script>