<button type="submit" class="btn btn-primary" href="/tourinput">Create Tour</button>


<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Album:</h3>

    <form class="form new-album-form">
      <div class="form-group">
        <label for="album-name">album name:</label>
        <input class="form-input" type="text" id="album-name" name="album-name" />
      </div>
      <div class="form-group">
        <label for="release-date">Release Date:</label>
        <input class="form-input" type="date" id="release-date"" name="release-date"" />
      </div>
      <div class="form-group">
        <label for="album-desc">description:</label>
        <textarea class="form-input" id="release-desc" name="release-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>

  {{#if albums.length}}
    <div class='col-md-6 album-list'>
      <h3>Current Albums List:</h3>

      {{#each albums as |album|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/album/{{album.id}}'>{{album.name}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger'
              data-id='{{album.id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

  <script src="./js/discography.js"></script>